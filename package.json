{
  "name": "morethan-log-astro",
  "type": "module",
  "version": "2.5.1",
  "description": "A modern, customizable blog template built with Astro - fast, responsive, and multilingual",
  "author": "Sereja <demo@morethan-log.com>",
  "license": "MIT",
  "keywords": [
    "astro",
    "blog",
    "template",
    "static-site",
    "markdown",
    "i18n",
    "multilingual",
    "responsive",
    "seo",
    "dark-mode"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JustSereja/morethan-log-astro"
  },
  "bugs": {
    "url": "https://github.com/JustSereja/morethan-log-astro/issues"
  },
  "homepage": "https://morethan-log-astro.sereja.com",
  "scripts": {
    "dev": "run-p client:watch astro:dev",
    "start": "npm run dev",
    "build": "run-s client:build astro:build",
    "postbuild": "run-s copy:404 format:dist",
    "copy:404": "node scripts/copy-404.mjs",
    "format:dist": "run-s format:dist:html format:dist:css format:dist:js fix:code-blocks",
    "fix:code-blocks": "node scripts/fix-code-blocks.mjs",
    "format:dist:html": "js-beautify --config .jsbeautifyrc --indent-scripts keep --content-unformatted \"script,pre,code\" --replace \"dist/**/*.html\"",
    "format:dist:css": "run-s optimize:dist:css beautify:dist:css",
    "optimize:dist:css": "find dist -name \"*.css\" -type f -print0 | xargs -0 -I{} ./node_modules/.bin/csso \"{}\" --comments none --output \"{}\"",
    "beautify:dist:css": "js-beautify --config .jsbeautifyrc --type css --replace \"dist/**/*.css\"",
    "format:dist:js": "js-beautify --config .jsbeautifyrc --type js --replace \"dist/**/*.js\"",
    "client:build": "node scripts/build-client.mjs",
    "client:watch": "node scripts/build-client.mjs --watch",
    "astro:dev": "astro dev",
    "astro:build": "astro build",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.8",
    "@astrojs/react": "^4.4.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.6.0",
    "astro": "^5.14.8",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "astro-compress": "^2.3.8",
    "astro-purgecss": "^5.3.0",
    "csso": "^5.0.5",
    "csso-cli": "^4.0.2",
    "esbuild": "^0.24.0",
    "js-beautify": "^1.15.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2"
  }
}
