---
import LanguageSwitcher from '@components/LanguageSwitcher.astro';
import NavLinks from '@components/layout/NavLinks.astro';

type NavItem = {
  id: string;
  href: string;
  label: string;
};

type LanguageOption = {
  code: string;
  label: string;
  displayLabel: string;
  href: string;
  isActive: boolean;
  isAvailable: boolean;
};

interface MobileMenuProps {
  lang: string;
  navItems: NavItem[];
  languageOptions: LanguageOption[];
}

const { lang, navItems, languageOptions }: MobileMenuProps = Astro.props;
---
<div class="mobile-menu" id="mobile-menu">
  <div class="cont">
    <nav class="mobile-menu__nav">
      <NavLinks navItems={navItems} variant="mobile" />
      <LanguageSwitcher lang={lang} options={languageOptions} variant="mobile" />
    </nav>
  </div>
</div>
